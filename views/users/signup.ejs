<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h2 class="col-6 offset-3 mb-3">Signup for Wanderlust</h2>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id= "username" name="username" placeholder="Enter Username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter password" class="form-control" required>
            </div>
            
            <button class="btn btn-dark" style="background-color: #fe424d; border: none;">Sign Up</button>
        </form>
    </div>
</div>